#ifndef TESTS_HPP_
#define TESTS_HPP_
#include<memory>

class Tests : public std::enable_shared_from_this<Tests>
{
	int a=5;
	char* ca = new char[5];
	public:
	 std::shared_ptr<Tests> getptr() {
	         return shared_from_this();
	     }
	 int getA(){return a;};
	 char giveCharAt(int i)
	 {
		if (i<5) return ca[i];
		return '-1';
	 }

};




#endif /* TESTS_HPP_ */
