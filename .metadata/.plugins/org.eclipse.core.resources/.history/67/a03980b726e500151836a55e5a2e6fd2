#ifndef ADRESSBUCH_HPP_
#define ADRESSBUCH_HPP_


#include <string>
#include <vector>

class AdressBuch{
public:
	void insert (const std::string& adress){
		adresses.push_back (adress);
	}

	std::vector<std::string>
	findAdresses(std:string& s)const
	{
		std:vector<std::string> result;
		for(const std::string& a: adresses){
			if (a.find(s) == 0)
				return result.push_back(a);
		}
	}
	std::vector<std::string>adresses;
};






#endif /* ADRESSBUCH_HPP_ */
